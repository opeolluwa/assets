<div class="card">
  <h3
    style="display: flex; align-items: center; justify-content: space-between"
  >
    <%=name %>
    <a href="<%=url  %> ">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-external-link"
        style="
          color: grey;
          width: 25px;
          display: inline-block;
          margin-left: 10px;
        "
      >
        <path
          d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
        ></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line></svg
    ></a>
  </h3>
  <!--<img src="<%=avatarUrl%>" alt="screenshot" class="snapshot">-->
  <div style="margin-bottom: 1.5rem"><%=description %></div>

  <div class="icon-container">
    <button class="icon" style="display:none">
      <i class="bi bi-eye" ></i> <%=
      meta.comment.length >= 1000000 ? (meta.comment.length /
      1000000).toFixed(1) + "M" : meta.comment.length >= 1000 ?
      (meta.comment.length / 1000).toFixed(1) + "k" :
      Number(meta.comment.length) %>
    </button>
  </div>
</div>
