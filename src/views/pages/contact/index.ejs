<div id="account">
  <div class="container">
    <h1>Contact US</h1>
    <p class="sub-hero-text">Let&apos;s talk about everything!</p>

    <form action="/contact" method="post">
      <span class="error" style="text-align: center; font-size: 14px"> </span>
      <div class="form-feed">
        <label for="firstname" style="vertical-align: baseline"
          >Firstname</label
        >
        <input
          type="text"
          placeholder="enter firstname"
          name="firstname"
          id="firstname"
          value=""
          required
        />
      </div>

      <div class="form-feed">
        <label for="email">Email</label>
        <input
          type="email"
          placeholder="enter email"
          name="email"
          value=""
          required
        />
      </div>

      <div class="form-feed">
        <label for="subject">Subject</label>
        <input
          type="text"
          placeholder="enter email subject"
          name="subject"
          value=""
          required
        />
      </div>

      <div class="form-feed">
        <label for="subject">Message</label>
        <textarea
          name="message"
          id="message"
          cols="30"
          rows="10"
          placeholder="message"
          required
        ></textarea>
      </div>

      <div class="form-feed">
        <button type="submit">Submit</button>
      </div>
    </form>
  </div>
  <%- include('./../../partials/user-authentication-footer'); %>
</div>
