<div id="account">
  <div class="container">
    <h1>Forgotten Password</h1>
    <p class="sub-hero-text">provide your email to begin.</p>

    <form action="http://localhost:5400/v1/app-setup/register-school" method="post"  enctype="multipart/form-data">
      <div class="form-feed">
        <label for="email">Email</label>
        <input
          type="email"
          placeholder="example@mailer.com"
          id="email"
          name="email"
          value=""
        />

        <input type="file" name="file"  value="" id="">
        <span class="error"> <%= error.email || ""%> </span>
      </div>
      <div class="form-feed">
        <button type="submit">Proceeddd</button>
      </div>
    </form>
    <div data-guide="sign-up">Back to <a href="/login">Login</a></div>
  </div>
  <%- include('./../../partials/user-authentication-footer'); %>
</div>
